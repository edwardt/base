# properties
# prop <name> <value in JSON format>
prop cval 0
prop pval 0
prop ledval 0

# events
# event <name>, where name can be "name", ":name", "dev:name"

# timers
# timer <name> <sec> <nsec>
timer timer0 1 0
timer timer1 2 0
timer timer2 10 0

# native functions
# native <name> <sofile>
native gpioGet   ../../gpio/libgpio.so
native gpioPut   ../../gpio/libgpio.so
native sysprint  ../../term/libterm.so

# reactors
# recursive reactor
#  - timer_add(timer1, 1, 0);
#  - prop_add(cval);
#  - prop_add(pval);
#  - prop_add(ledval);
#  - always @(timer) begin
#      cval = gpioGet(pin);
#      if (cval != pval)
#        polya:gpioPut(10 /*pin*/, ledval);
#      pval = cval;
#      if (ledval == 1)
#        ledval = 0;  
#      else
#        ledval = 1;  
#  - add_event_reactor(timer, r1);
# 
reactor r1 
{
  pushi 10                # 0: pin value for button
  pushs ":gpioGet"        # 1:
  call_func               # 2:  :gpioGet(pin)
  pushs "cval"            # 3:
  prop_set                # 4:  cval = retval
  pushs "cval"            # 5:
  prop_get                # 6:  get cval
  pushs "pval"            # 7:
  prop_get                # 8:  get pval
  beq 22                  # 9:  if (cval == pval) 
  pushn                   # 10: push null
  pushs "ledval"          # 11: 
  prop_get                # 12:
  cons                    # 13: [ledval] = [ledval.null]
  pushi 10                # 14: pin value for remote LED
  cons                    # 15: [10 ledval] -- funarg to gpioPut
  pushs "dev1:gpioPut"    # 16: funcname
  call_func               # 17: dev1:gpioPut(10, ledval)
  pushs "cval"            # 18:
  prop_get                # 19: get cval
  pushs "pval"            # 20: 
  prop_set                # 21: pval = cval
  pushs "ledval"          # 22: 
  prop_get                # 23: get ledval
  pushi 1                 # 24:  
  beq 30                  # 25: if (ledval == 1)
  pushi 1                 # 26:
  pushs "ledval"          # 27:
  prop_set                # 28: ledval = 1
  ret                     # 29: ret
  pushi 0                 # 30:
  pushs "ledval"          # 31:
  prop_set                # 32: ledval = 0
}
reactor r2 
{
  pushn
  pushi 1
  cons
  pushi 10                
  cons                    
  pushs "dev1:gpioPut"
  call_func              # call dev1:gpioPut(10 1)
}
reactor r3 
{
  pushi 10                
  pushs "dev1:foo"
  call_func              # call dev1:gpioPut(10 1)
}

reactor r4 
{
  pushs "dev1:batterylife"
  prop_get
  pushs "sysprint"
  call_func
}

# event-reactor associations
# <eventname> <reactorname>
assoc timer0 r1
assoc timer1 r2
assoc timer2 r3
assoc timer2 r4
